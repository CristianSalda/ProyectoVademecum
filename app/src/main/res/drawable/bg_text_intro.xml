<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo -->
    <solid android:color="#D9D9D9" />

    <!-- Borde negro -->
    <stroke
        android:width="1dp"
        android:color="#000000" />

    <!-- Bordes redondeados (ajusta el radio a tu gusto) -->
    <corners android:radius="16dp" />

    <!-- Padding interno para que el texto no pegue con los bordes -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>